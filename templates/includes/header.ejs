<div class="layout-header">

	<div class="layout-header-main">
		<div class="container">
			<div class="layout-header-logo">
				<a href="<%= themeConfig.domain %>">
					<img class="logo" src="<%= themeConfig.domain %>/media/images/site_avatar.png?v=<%= site.utils.now %>" alt="">
				</a>
			</div>
			<div class="layout-header-menu d-md-inline-block d-none">
				<ul class="layout-navigation-list">
					<% menus.forEach(function (menu) { %>
					<li class="layout-navigation-item"><a title="<%= menu.name %>" href="<%= menu.link %>"><%= menu.name %></a>
					</li>
					<% }); %>
				</ul>
			</div>
			<div class="layout-header-item d-none">
				<span class="layout-header-action layout-header-search">
					<i class="fa fa-search" aria-hidden="true"></i>
				</span>
			</div>
			<% if (site.customConfig.rss) { %>
			<div class="layout-header-item d-md-inline-block d-none">
				<a class="ltem-feed" href="<%= site.customConfig.rss %>">
					<i class="fa fa-rss" aria-hidden="true"></i>
				</a>
			</div>
			<% } %>
			<div class="layout-header-nav d-md-none d-inline-block">
				<div class="layout-header-trigger">
					<i class="fa fa-bars layout-btn-toggle" aria-hidden="true"></i>
				</div>
			</div>
		</div>
	</div>

</div>